from llama_index.core import PromptTemplate

class PromptGenerator:
    def __init__(self, template_str):
        self.template = PromptTemplate(template_str)

    def create_prompt(self, context_str, query_str):
        return self.template.format(context_str=context_str, query_str=query_str)

    def create_messages(self, context_str, query_str):
        return self.template.format_messages(context_str=context_str, query_str=query_str)

template_str = (
    "We have provided context information below. \n"
    "---------------------\n"
    "{context_str}"
    "\n---------------------\n"
    "Given this information, review the following code: {query_str}\n"
)